<%
  if @allocated_fee.blank?
%>
  $('#fee_not_allocated-error').removeClass("hidden");
<%
  else
%>
  $('#fee_not_allocated-error').addClass("hidden")
  var fee = Number($('input#allocated_fee').val());
  fee += <%= @allocated_fee.allocated_fee.to_f %>
      $('input#allocated_fee').val(fee)
  $('div#allocated_fee_div').addClass('is-dirty');
<%
  end
 %>