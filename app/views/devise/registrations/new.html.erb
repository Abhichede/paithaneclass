<div class="mdl-grid">
<div class="mdl-layout-spacer"></div>
<div class="demo-card-square mdl-card mdl-shadow--2dp login-card">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">
      Sign up
    </h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.label :username, class: 'mdl-textfield__label' %><br />
          <%= f.text_field :username, class: 'mdl-textfield__input', autofocus: true %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.label :email, class: 'mdl-textfield__label' %><br />
          <%= f.email_field :email, class: 'mdl-textfield__input', autofocus: true, required: true %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.label :password, class: 'mdl-textfield__label' %>
          <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input', required: true %>
        </div>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.label :password_confirmation, class: 'mdl-textfield__label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'mdl-textfield__input' %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.select(:role, options_for_select([['Role'],['ADMIN','ADMIN'],['EDITOR','EDITOR']],
                                                               :disabled => 'Role'),
                       {}, class: 'mdl-textfield__input') %>
          <%= f.label :role, class: 'mdl-textfield__label' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored' %>
        </div>
    <% end %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <%= render "devise/shared/links" %>
  </div>
</div>
<div class="mdl-layout-spacer"></div>
</div>