<div class="mdl-grid">
<div class="mdl-layout-spacer"></div>
<div class="demo-card-square mdl-card mdl-shadow--2dp login-card">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">
      Log in
    </h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), autofill: false) do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height">
          <%= f.label :email, class: 'mdl-textfield__label' %><br />
          <%= f.email_field :email, class: 'mdl-textfield__input', autofocus: true, value: nil %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height">
          <%= f.label :password, class: 'mdl-textfield__label' %><br />
          <%= f.password_field :password, class: 'mdl-textfield__input', value: nil %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-1">
              <%= f.check_box :remember_me, id: 'checkbox-1', class: 'mdl-checkbox__input' %>
              <span class="mdl-checkbox__label">Remember Me</span>
            </label>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored' %>
        </div>
    <% end %>
  </div>
</div>

<div class="mdl-layout-spacer"></div>
</div>

